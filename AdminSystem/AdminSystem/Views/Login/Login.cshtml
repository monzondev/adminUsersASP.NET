
@{
    ViewBag.Title = "Login";
}

<h2>Iniciar Sesion</h2>

<div class="container col-lg-6 col-lg-offset-3" >
    <form action="/Access/LoginAuth" method="POST">
        <div class="form-group">
            <label for="email">Correo Electronico</label>
            <input type="email" class="form-control" id="correo" aria-describedby="emailHelp"name="correo" placeholder="Escribe tu correo electronico">
            <small id="mensaje" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Escribe tu contraseña">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
    